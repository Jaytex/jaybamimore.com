doctype html
html
  block link
    -var selected = 'Home';
  -var menu = { 'Home': '/home', 'Blog': '/blog', 'Projects': '/projects', 'Music': '/music', 'Resume': '/resume', 'About': '/about' }; 

  head
    title #{title} | Jay
    meta(charset='UTF-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="http://fonts.googleapis.com/css?family=Ubuntu", rel="stylesheet", type="text/css")
    link(rel='shortcut icon', href='/img/favicon.ico')
    link(rel='stylesheet', type='text/css', href='ss/jstyle.css')

    script(type='text/javascript', src='/js/jquery.js')
    script(type='text/javascript', src='/js/bootstrap.js')
  

   

  body
     
   
    // Fixed navbar
    .navbar.navbar-centered.navbar-inverse.navbar-fixed-top(role="navigation")     
      .container
        .navbar-header
           button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            each val, key in menu
              li
                if selected === key
                    a.selected(href=val, title=key)= key
                else
                    a(href=val, title=key)= key
        // /.nav-collapse


    .push
   
    .container
      block content
      .push


    #footer
      p
        | &copy 2014
        a(href='/')  Jay Bamimore 

 